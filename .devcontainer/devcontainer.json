{
    "name": "Java",
    "dockerFile": "Dockerfile",
    // Set *default* container specific settings.json values on container create.
    "settings": {
        "java.home": "/docker-java-home"
    },
    "customizations": {
        // Configure properties specific to VS Code.
        "vscode": {
            // Add the IDs of extensions you want installed when the container is created.
            "extensions": [
                "jebbs.plantuml",
                "ciarant.vscode-structurizr",
                "systemticks.c4-dsl-extension"
            ]
        }
    },
    "mounts": [
        "source=extensions,target=/root/.vscode-server/extensions,type=volume",
        "source=m2,target=/root/.m2,type=volume"
    ],
    "postCreateCommand": "sudo apt install graphviz -y"
}